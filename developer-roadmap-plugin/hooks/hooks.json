{
  "version": "1.0",
  "hooks": [
    {
      "name": "learning-progress-tracker",
      "description": "Automatically track learning progress and milestones",
      "trigger": "on-skill-complete",
      "actions": [
        {
          "type": "update-progress",
          "properties": {
            "increment_hours": 1,
            "update_streak": true,
            "check_milestones": true
          }
        },
        {
          "type": "achievement-check",
          "properties": {
            "evaluate_badges": true,
            "unlock_new_content": true
          }
        }
      ]
    },
    {
      "name": "project-validation",
      "description": "Validate hands-on projects against requirements",
      "trigger": "on-project-submit",
      "actions": [
        {
          "type": "validate-project",
          "properties": {
            "check_requirements": true,
            "evaluate_code_quality": true,
            "test_functionality": true
          }
        },
        {
          "type": "provide-feedback",
          "properties": {
            "suggest_improvements": true,
            "rate_project": true
          }
        }
      ]
    },
    {
      "name": "prerequisites-check",
      "description": "Verify prerequisites before advancing to next phase",
      "trigger": "on-phase-attempt",
      "actions": [
        {
          "type": "check-prerequisites",
          "properties": {
            "validate_completed_skills": true,
            "verify_projects_done": true,
            "assess_knowledge_level": true
          }
        },
        {
          "type": "recommend-action",
          "properties": {
            "suggest_review_topics": true,
            "recommend_gap_filling": true
          }
        }
      ]
    },
    {
      "name": "community-engagement",
      "description": "Encourage community participation and knowledge sharing",
      "trigger": "daily-check-in",
      "actions": [
        {
          "type": "community-suggestion",
          "properties": {
            "suggest_discussions": true,
            "highlight_open_issues": true,
            "promote_collaboration": true
          }
        },
        {
          "type": "recognition",
          "properties": {
            "celebrate_achievements": true,
            "highlight_contributions": true
          }
        }
      ]
    },
    {
      "name": "resource-recommendation",
      "description": "Provide personalized learning resource recommendations",
      "trigger": "on-skill-select",
      "actions": [
        {
          "type": "recommend-resources",
          "properties": {
            "match_learning_style": true,
            "consider_experience_level": true,
            "prioritize_quality": true,
            "include_free_resources": true
          }
        },
        {
          "type": "schedule-learning",
          "properties": {
            "create_daily_schedule": true,
            "set_reminders": true,
            "track_completion": true
          }
        }
      ]
    },
    {
      "name": "certificate-generation",
      "description": "Generate learning certificates upon milestone completion",
      "trigger": "on-phase-complete",
      "actions": [
        {
          "type": "verify-completion",
          "properties": {
            "validate_all_requirements": true,
            "check_minimum_projects": true,
            "assess_skill_level": true
          }
        },
        {
          "type": "generate-certificate",
          "properties": {
            "include_skills_list": true,
            "add_achievement_badges": true,
            "shareable_format": true
          }
        }
      ]
    },
    {
      "name": "ai-agent-routing",
      "description": "Route learning questions to appropriate agent",
      "trigger": "on-user-question",
      "actions": [
        {
          "type": "analyze-question",
          "properties": {
            "identify_domain": true,
            "assess_complexity": true,
            "determine_agent": true
          }
        },
        {
          "type": "invoke-agent",
          "properties": {
            "route_to_specialist": true,
            "provide_context": true,
            "track_interaction": true
          }
        }
      ]
    },
    {
      "name": "learning-adaptation",
      "description": "Adapt learning path based on user performance",
      "trigger": "weekly-assessment",
      "actions": [
        {
          "type": "analyze-performance",
          "properties": {
            "evaluate_quiz_scores": true,
            "assess_project_quality": true,
            "measure_concept_mastery": true
          }
        },
        {
          "type": "adjust-path",
          "properties": {
            "modify_difficulty": true,
            "add_reinforcement": true,
            "adjust_pace": true
          }
        }
      ]
    }
  ]
}
